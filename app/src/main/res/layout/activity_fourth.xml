<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/hui">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="238dp"
        android:src="@drawable/wangtianhu" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@color/white"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="望天湖生态旅游度假区"
        android:textSize="30dp"
        android:layout_gravity="center" />

    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@color/white"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="       广东望天湖生态旅游度假区位于揭阳市蓝城区白塔镇广和草山望天湖，总体面积五千多亩，是以生态农业为主题的特色旅游综合体。区内自然生态资源丰富，幽泉环绕，林果生香，通过现代园林与潮式生态建筑营造生态文化与潮汕文化内涵的延续与升华，景区内现已建成集生态农业观光、养生度假、商务接待、自然科普、四季花海等功能为一体的综合性旅游接待基地。"
        android:textSize="20dp" />



</LinearLayout>